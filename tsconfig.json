{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "lib": [
      "dom",
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "paths": {
      "got": ["./node_modules/got/dist/source"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "untyped.d.ts"
  ]
}